@import url('https://fonts.googleapis.com/css?family=Roboto:400,500,700')
@import './variables.styl'

*, *::before, *::after
  box-sizing border-box

*[hidden]
  display none

body
  background #fafafa
  color #212121
  font 400 1em/1.4 'Roboto', Sans-serif
  margin 0 0 2em

header,
section > div,
section > fieldset,
section > ul,
.top-menu
  padding 2rem 1rem 1.75rem
  @media (min-width $breakpoint-medium)
    padding 2.5rem 8% 1.75rem
  @media (min-width $breakpoint-large)
    padding 2rem 12% 1.75rem

.top-menu
  background: darken($color-primary, 7%)
  padding-top: .5em
  padding-bottom: .5em
  a
    color: #fff
    margin-right: 1.5em
    &:hover, &:focus
      color: $color-secondary
    &.v-link-active
      color: darken($color-primary, 40%)

header
  background $color-primary
  box-shadow 0 2px 2px 0 alpha(#000, .14), 0 3px 1px -2px alpha(#000, .2), 0 1px 5px 0 alpha(#000, .12)
  color #fff

h1, h2
  font-size 2.25em
  line-height 1
  margin 0 0 .25em

h2
  color $color-primary
  font-weight 500
  font-size 1.375em

small
  color alpha(#000, .26)
  display inline-block
  font-size .875em
  padding 0 .25em

p
  margin 0 0 .5em
  &:last-of-type
    margin 0

fieldset
  background #fff
  border none
  box-shadow 0 1px 1.5px 0 alpha(#000, .12), 0 1px 1px 0 alpha(#000, .24)
  font-size 0
  footer
    font-size 0
    padding 1rem 0 0
  div
    font-size 1rem
    position relative
    margin 0
    padding 0 0 1.25em
    display inline-block
    width 100%
    @media (min-width $breakpoint-medium)
      width calc(50% - .5rem)
      margin-right .5rem
      &:nth-of-type(even)
        margin-right 0
        margin-left .5rem

a
  color $color-secondary
  text-decoration none
  overflow none
  transition color 250ms ease
  &:hover, &:focus
    color darken($color-secondary, 15%)

input:not([type]),
input[type='text'],
input[type='number']
  border none
  border-bottom 1px solid alpha(#000, .12)
  font inherit
  margin-bottom 1px
  padding 4px 0
  width 100%
  background transparent
  text-align left
  color transparent
  outline 0
  transition border-color .2s cubic-bezier(.4, 0, .2, 1), color .4s cubic-bezier(.4, 0, .2, 1)
  & + label
    color alpha(#000, .26)
    display block
    overflow hidden
    pointer-events none
    position absolute
    text-align left
    transition all .2s cubic-bezier(.4, 0, .2, 1)
    white-space nowrap
    width calc(100% - 1em)
    top 4px
    left 0
    right 0
  &:focus
    margin-bottom 0
    border-bottom 2px solid $color-secondary
    & + label
      color $color-secondary
      font-size .75em
      top -1.25em
  &:not(:focus):valid
    & + label
      color $color-secondary
      font-size .75em
      top -1.25em
  &:valid, &:focus:invalid
    color inherit

.button,
button,
input[type='submit'],
input[type='reset']
  background transparent
  border none
  border-radius 2px
  color $color-secondary
  cursor pointer
  display inline-block
  font-size .875rem
  font-weight 500
  height 2.57em
  letter-spacing 0
  line-height 2.57em
  margin-left 1em
  outline 0
  padding 0 .5em
  text-align center
  text-transform uppercase
  transition box-shadow .2s cubic-bezier(.4, 0, 1, 1), background-color .2s cubic-bezier(.4, 0, .2, 1), color .2s cubic-bezier(.4, 0, .2, 1)
  vertical-align middle
  white-space nowrap
  &:first-of-type
    margin-left 0
  &:hover
    background-color alpha(#9e9e9e, .2)
  &:active
    background-color alpha(#9e9e9e, .4)
  &:focus
    &:not(:active)
      background-color alpha(#000, .12)
  &[disabled]
    opacity: .5
    cursor: default
    background: transparent none !important
  &.primary, &.floating
    background $color-secondary
    color #fff
    box-shadow 0 2px 2px 0 alpha(#000, .14), 0 3px 1px -2px alpha(#000, .2), 0 1px 5px 0 alpha(#000, .12)
    &:hover
      background darken($color-secondary, 15%)
    &:active
      box-shadow 0 4px 5px 0 alpha(#000, .14), 0 1px 10px 0 alpha(#000, .12), 0 2px 4px -1px alpha(#000, .2)
    &:focus
      &:not(:active)
        background $color-secondary
        box-shadow 0 0 8px alpha(#000, .18), 0 8px 16px alpha(#000, .36)
    &[disabled]
      background: transparent none !important
      color: $color-secondary !important
      box-shadow: none !important
  &.floating
    float: right
    border-radius: 50%
    width: 3.75em
    height: 3.75em
    padding: .75em
    &.edit
      padding: 1em
    &::before
      display: inline-block
      content: ''
      width: 100%
      height: 100%
      background-size: cover
      background-repeat: no-repeat
    &.add::before
      background-image: url('data:image/svg+xml;charset=utf-8,%3Csvg%20fill%3D%22%23fff%22%20width%3D%2224%22%20height%3D%2224%22%20viewBox%3D%220%200%2024%2024%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%0D%0A%20%20%3Cpath%20d%3D%22M19%2013h-6v6h-2v-6H5v-2h6V5h2v6h6v2z%22%2F%3E%0D%0A%20%20%3Cpath%20d%3D%22M0%200h24v24H0z%22%20fill%3D%22none%22%2F%3E%0D%0A%3C%2Fsvg%3E')
    &.edit::before
      background-image: url('data:image/svg+xml;charset=utf-8,%3Csvg%20fill%3D%22%23fff%22%20width%3D%2224%22%20height%3D%2224%22%20viewBox%3D%220%200%2024%2024%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%0D%0A%20%20%20%20%3Cpath%20d%3D%22M3%2017.25V21h3.75L17.81%209.94l-3.75-3.75L3%2017.25zM20.71%207.04c.39-.39.39-1.02%200-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41%200l-1.83%201.83%203.75%203.75%201.83-1.83z%22%2F%3E%0D%0A%20%20%20%20%3Cpath%20d%3D%22M0%200h24v24H0z%22%20fill%3D%22none%22%2F%3E%0D%0A%3C%2Fsvg%3E')

ul
  margin 0
  padding 0
  list-style square
  listposition inside
  background #fff
  border none
  box-shadow 0 1px 1.5px 0 alpha(#000, .12), 0 1px 1px 0 alpha(#000, .24)

li
  padding 0 0 1.5em .25em
  &:last-of-type
    padding-bottom 0
